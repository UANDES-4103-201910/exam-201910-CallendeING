		<link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>

  <body>




    <div class="logo">

    </div>



    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Z-Mobile</a>
        </div>


        <ul class="navbar-header navbar-right">
          <% if user_signed_in? %>
            <a class="navbar-brand" href="/shopping_cart">My cart</a>
            <a class="navbar-brand"></a>
            <a><%= link_to(current_user.email, edit_user_registration_path ,class: "navbar-brand") %></a>
            <a class="navbar-brand"></a>
            <a><%= link_to('Logout', destroy_user_session_path, method: :delete , class: "navbar-brand") %></a>
            
          <% else %>
            <a class="navbar-brand" href="/users/sign_in">Sign In</a>
            <a class="navbar-brand" >/</a>
            <a class="navbar-brand" href="/users/sign_up">Sign Up</a>
          <% end %>
        </ul>
      </div>
    </nav>

     <nav class="navbar navbar-default">
      <a class="navbar-brand" href="/">Handsets</a>
            <a class="navbar-brand" href="/">Prepay Options</a>
            <a class="navbar-brand" href="/">Subscriptions</a>
</div>
    </nav>

    <% if flash[:notice] %>
    <div class = "alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
    <div class = "alert alert-error">
      <button type="button" class = "close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class = "alert">
      <button type="button" class = "close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 col-sm-4">

                <div class="vertical-menu">
                  <a href="#">Link 1</a>
                  <a href="#">Link 2</a>
                  <a href="#">Link 3</a>
                  <a href="#">Link 4</a>
                </div>
            </div>
            <div class="col-md-10 col-sm-8 main-content">
            <%= yield %>
        </div>
    </div>
<div id="cuerpo">


  
</div>
